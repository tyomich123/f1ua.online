{
  "kind": "collectionType",
  "collectionName": "races",
  "info": {
    "singularName": "race",
    "pluralName": "races",
    "displayName": "Race"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "default": "Example: \"Abu Dhabi Grand Prix\"",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "circuit": {
      "type": "string",
      "default": "Example: \"Yas Marina Circuit\""
    },
    "country": {
      "type": "string"
    },
    "round": {
      "type": "integer",
      "min": 1,
      "max": 24
    },
    "season": {
      "type": "integer",
      "min": 2000,
      "max": 2100
    },
    "date": {
      "type": "datetime"
    },
    "statuss": {
      "type": "enumeration",
      "enum": [
        "upcoming",
        "live",
        "completed"
      ]
    }
  }
}
